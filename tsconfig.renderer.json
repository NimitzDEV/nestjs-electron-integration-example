{
  "compilerOptions": {
    "removeComments": true,
    "module": "ES2015",
    "target": "ES5",
    "sourceMap": true,
    "outDir": "./dist/renderer",
    "baseUrl": "./",
    "incremental": true,
    "moduleResolution": "Node",
    "rootDir": "./src/renderer"
  },
  "include": ["src/renderer/*"],
  "exclude": ["node_modules",
    "src/main/bridge", "src/main"]
}
